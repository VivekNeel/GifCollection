<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="in.gif.collection.viewmodel.search.SearchGifViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <in.gif.collection.custom.CustomSearchBar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:gravity="top" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:visibility="@{viewModel.gifProgress}"
            app:lottie_autoPlay="true"
            app:lottie_fileName="moving_ball.json"
            app:lottie_loop="true" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/randomGifRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.gifRecyclerView}"></android.support.v7.widget.RecyclerView>


    </LinearLayout>
</layout>